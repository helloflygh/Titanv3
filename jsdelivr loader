// 1. Paste your entire game HTML code between the backticks (``)
const gameCode = `
    <!DOCTYPE html>
    <html>
    <head>
        <title>Game</title>
    </head>
    <body>
        <h1>Your Game Code Goes Here</h1>
    </body>
    </html>
`;

// 2. This logic turns that text into a working game inside the frame
const blob = new Blob([gameCode], { type: 'text/html' });
const url = URL.createObjectURL(blob);
document.getElementById('viewer').src = url;

// 3. Keep your Panic Button logic below
const PANIC_URL = "https://clever.com"; 
function doPanic() {
    document.getElementById("panic-iframe").src = PANIC_URL;
    document.getElementById("panic-overlay").style.display = "block";
}
function closePanic() {
    document.getElementById("panic-overlay").style.display = "none";
}
