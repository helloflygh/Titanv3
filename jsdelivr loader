        width: 100%;
        height: 100%;
        overflow: auto; /* Allows the game to scroll if needed */
        position: relative;
        z-index: 1;
    }

    /* --- Large Red Panic Button --- */
    .panic-btn {
        position: fixed; 
        top: 15px; 
        right: 20px; /* Moved to side so it doesn't block center of game */
        font-size: 18px; 
        padding: 12px 30px; 
        color: #000000 !important; 
        background: #ff3333; 
        font-family: 'Arial Black', sans-serif;
        cursor: pointer; 
        z-index: 99999; /* Keeps it above everything */
        border-radius: 8px;
        font-weight: 900; 
        border: 3px solid #000;
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        transition: all 0.2s ease-in-out;
        text-transform: uppercase;
