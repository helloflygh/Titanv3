    /* Reset and Layout */
    * { box-sizing: border-box; }
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden; /* Prevents double scrollbars */
        background: #000;
        display: flex;
        flex-direction: column; /* Stacks button bar on top of game */
    }

    /* --- TOP BAR (Forces centering) --- */
    #top-bar {
        width: 100%;
        display: flex;
        justify-content: center; /* Centers horizontally */
        align-items: center;    /* Centers vertically */
        padding: 10px 0;
        background: transparent;
        position: absolute;      /* Floats over the game */
        top: 0;
        left: 0;
        z-index: 99999;          /* Always on top */
        pointer-events: none;    /* Allows clicking the game behind the bar */
    }

    /* --- Panic Button --- */
    .panic-btn {
        pointer-events: auto;    /* Makes button clickable again */
        font-size: 20px; 
        padding: 12px 50px; 
        color: #000 !important; 
        background: #ff3333; 
        font-family: 'Arial Black', sans-serif;
        cursor: pointer; 
        border-radius: 10px;
        font-weight: 900; 
        border: 4px solid #000;
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: transform 0.1s;
    }

    .panic-btn:hover { transform: scale(1.05); background: #ff4d4d; }
    .panic-btn:active { transform: scale(0.95); }

    /* --- THE GAME AREA --- */
    #game-container {
        flex-grow: 1;           /* Fills the remaining screen space */
        width: 100%;
        height: 100%;
