    <style>
        body, html { margin: 0; padding: 0; height: 100%; overflow: hidden; background: #1a1a1a; font-family: Arial, sans-serif; }
        iframe { width: 100%; height: 100%; border: none; display: none; }

        /* Homescreen Styling */
        #homescreen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #ffffff;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 10000;
        }

        #launch-btn {
            padding: 15px 40px;
            font-size: 24px;
            font-weight: bold;
            color: white;
            background-color: #4285f4;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.2s, background-color 0.2s;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        #launch-btn:hover {
            background-color: #357ae8;
            transform: scale(1.05);
        }

        /* Secret X Styling */
        #secret-x {
            position: absolute;
            top: 0;
            right: 0;
            width: 40px; 
