    <title>Google Drive</title> <style>
        body, html { margin: 0; padding: 0; height: 100%; overflow: hidden; background: white; }
        iframe { width: 100%; height: 100%; border: none; }

        /* Invisible clickable corner */
        #secret-x {
            position: absolute;
            top: 0;
            right: 0;
            width: 12px;
            height: 12px;
            z-index: 9999;
            background: rgba(0,0,0,0.01);
            cursor: default;
        }
    </style>
</head>
<body>

    <iframe src="https://www.wikipedia.org"></iframe>

    <div id="secret-x" onclick="launch()"></div>

    <script>
        async function launch() {
            // THE LINKS
            const htmlSource = "https://raw.githubusercontent.com/USER/REPO/main/index.html";
            const faviconUrl = "https://raw.githack.com/USER/REPO/main/favicon.ico";
            const tabName = "Your Text Here";

            try {
                const response = await fetch(htmlSource);
                const gameCode = await response.text();
                
                const win = window.open("about:blank", "_blank");
                if (!win) return;

                // Create the metadata
                const meta = `
                    <title>${tabName}</title>
                    <link rel="icon" href="${faviconUrl}">
                `;

                win.document.open();
                // Inject the meta/favicon + the full HTML code from GitHub
                win.document.write(meta + gameCode);
                win.document.close();
            } catch (err) {
                console.error("Launch failed. Check your GitHub link.");
            }
        }
    </script>
</body>
</html>
