<body>

    <div id="homescreen">
        <button id="launch-btn" onclick="startSequence()">Launch T!tan</button>
    </div>

    <iframe id="clever-frame" src="about:blank"></iframe>
    <div id="secret-x" onclick="launch()">x</div>

    <script>
        function startSequence() {
            const screen = document.getElementById('homescreen');
            const frame = document.getElementById('clever-frame');
            const secretX = document.getElementById('secret-x');

            // 1. Hide homescreen, show iframe/X
            screen.style.display = 'none';
            frame.style.display = 'block';
            secretX.style.display = 'flex';

            // 2. Load Clever
            frame.src = "https://clever.com";

            // 3. Wait 3 seconds then run the launch code
            setTimeout(() => {
                launch();
            }, 3000);
        }

        async function launch() {
            const codeURL = "https://raw.githubusercontent.com/helloflygh/Titanv3/main/UI";
            const iconURL = "https://raw.githubusercontent.com/helloflygh/games/main/clever-favicon.png";
            const tabName = "Clever | Portal";

            try {
                const htmlRes = await fetch(codeURL);
                const html = await htmlRes.text();

                const iconRes = await fetch(iconURL);
                const iconBlob = await iconRes.blob();
                const localIconURL = URL.createObjectURL(iconBlob);

                const win = window.open("about:blank", "_blank");
                if (!win) {
                    alert("Pop-up blocked! Please allow pop-ups for this site.");
                    return;
                }

                const head = `
                    <title>${tabName}</title>
                    <link rel="icon" type="image/x-icon" href="${localIconURL}">
                `;

                win.document.open();
                win.document.write(head + html);
                win.document.close();

            } catch (err) {
                console.error("Launch failed.", err);
            }
        }
    </script>
</body>
</html>
