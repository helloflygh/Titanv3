    <div id="panic-overlay"><span style="position:absolute; top:15px; left:15px; font-size:30px; cursor:pointer;" onclick="closePanic()">&times;</span><iframe id="panic-iframe"></iframe></div>

    <script>
        const quotes = ["Who actually reads these?", "Major updates every Monday!", "Mateooooooooooooooooooooooooo", "T!tans way - Games for when teachers look away.", "R.I.P. n3bula and s4turn.", "Dont get lost in 'The Odyssey', T!tans here for YOU!", "TYSM S4turn <3", "I cooked up a T!tanic update for yall", "", "I think maverick had a lil too much of his mothers crystals", "Is this update even good?", "One of the only sites at multiple schools"];
        let lastQuoteIndex = -1;

        function initSite() {
            document.getElementById("panicUrlInput").value = localStorage.getItem('panicLink') || 'https://clever.com';
            document.getElementById("panicTabToggle").checked = localStorage.getItem('panicTabEnabled') === 'true';
            document.getElementById("shortcutToggle").checked = localStorage.getItem('panicShortcutEnabled') !== 'false';
            document.getElementById("panicKeyInput").value = localStorage.getItem('panicKey') || 'x';
            updateQuote();
            setInterval(updateQuote, 8000);
        }

        function updateQuote() {
            const display = document.getElementById("quoteDisplay");
            let newIndex;
            do { newIndex = Math.floor(Math.random() * quotes.length); } while (newIndex === lastQuoteIndex);
            lastQuoteIndex = newIndex;
            display.style.opacity = 0;
            setTimeout(() => {
                display.textContent = quotes[newIndex];
                display.style.opacity = 1;
            }, 500);
        }

        function handleNav(isOpen) { document.getElementById("navPanel").style.width = isOpen ? "250px" : "0"; }
        function toggleSettings(show) {
            document.getElementById("mainLinks").style.display = show ? "none" : "block";
            document.getElementById("settingsMenu").style.display = show ? "block" : "none";
        }

        function changeContent(id) { 
            document.querySelectorAll('.page-content').forEach(p => p.classList.remove('active-page')); 
            document.getElementById(id).classList.add('active-page'); 
            handleNav(false); 
        }

        function doPanic() {
            let url = document.getElementById("panicUrlInput").value.trim() || 'https://clever.com';
            if (document.getElementById("panicTabToggle").checked) {
                window.open(url.startsWith('http') ? url : 'https://' + url, '_blank');
            } else {
                document.getElementById("panic-iframe").src = url.startsWith('http') ? url : 'https://' + url;
                document.getElementById("panic-overlay").style.display = "block";
            }
        }

        function closePanic() { document.getElementById("panic-overlay").style.display = "none"; }
        function saveSettings() {
            localStorage.setItem('panicLink', document.getElementById("panicUrlInput").value);
            localStorage.setItem('panicTabEnabled', document.getElementById("panicTabToggle").checked);
            localStorage.setItem('panicShortcutEnabled', document.getElementById("shortcutToggle").checked);
            localStorage.setItem('panicKey', document.getElementById("panicKeyInput").value.toLowerCase());
        }

        function filterImages() {
            let q = document.getElementById("search").value.toLowerCase();
            let matches = 0;
            document.querySelectorAll(".item").forEach(i => {
                let match = i.dataset.title.toLowerCase().includes(q);
                i.style.display = match ? "block" : "none";
                if(match) matches++;
            });
            document.getElementById("no-results").style.display = matches === 0 ? "block" : "none";
        }

        window.addEventListener('keydown', (e) => {
            const isEnabled = document.getElementById("shortcutToggle").checked;
            const targetKey = (document.getElementById("panicKeyInput").value || 'x').toLowerCase();
            if (isEnabled && e.ctrlKey && e.key.toLowerCase() === targetKey) {
                e.preventDefault(); doPanic();
            }
        });

        function openInBlank() {
            let win = window.open('about:blank', '_blank');
            if (win) {
                win.document.write(`<html><head><title>about:blank</title><style>body,html{margin:0;padding:0;height:100%;overflow:hidden;}</style></head><body>${document.documentElement.outerHTML}</body></html>`);
                win.document.close();
            }
        }
    </script>
</body>
</html>
